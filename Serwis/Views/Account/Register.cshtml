@model RegisterWorker
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";

}

<h1> Rejestracja </h1>

<form asp-controller="Account" asp-action="Register" method="post">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">E-mail</label>
        <input type="email" class="form-control" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"> </span> 
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Hasło</label>
        <input type="password" class="form-control" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"> </span> 
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"> Powtórz Hasło</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" class="text-danger"> </span>
    </div>
    
    
    <div class="mb-3">
        <p> Dane Kontaktowe: </p>
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"> Imie </label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"> </span>
    </div>
    
    <div class="mb-3">
        <label asp-for="Surename" class="form-label"> Nazwisko </label>
        <input type="text" class="form-control" asp-for="Surename">
        <span asp-validation-for="Surename" class="text-danger"> </span>
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"> Numer Telefonu </label>
        <input type="text" class="form-control" asp-for="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"> </span>
    </div>

    <div class="mb-3">
        <p> Adres: </p>
    </div>

     <div class="mb-3">
        <label asp-for="City" class="form-label"> Miasto </label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="City" class="text-danger"> </span>
    </div>

    <div class="mb-3">
        <label asp-for="Zip_Code" class="form-label"> Kod Pocztowy </label>
        <input type="text" class="form-control" asp-for="Zip_Code">
        <span asp-validation-for="Zip_Code" class="text-danger"> </span>
    </div>

    <div class="mb-3">
        <label asp-for="Adress" class="form-label"> Adres </label>
        <input type="text" class="form-control" asp-for="Adress">
        <span asp-validation-for="Adress" class="text-danger"> </span>
    </div>

    <button type="submit" class="btn btn-primary"> Zarejestruj </button>

</form>

<div asp-validation-summary ="All" class="text-danger"></div>